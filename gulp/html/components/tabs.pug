//- Tab pane
mixin tab(id,active,options)
	- options = options || {};
	- var style = options.style || '';
	- style = style.replace(/\btab-pane\b/, '')
	- if(active && style.indexOf("active") == -1) style += (style.length == 0 ? "active" : " active")
	.tab-pane(id=`tab${id}`, class=style)
		block
